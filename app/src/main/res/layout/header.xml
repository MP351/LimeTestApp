<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rv_item_height"
    android:background="@drawable/header_gradient"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_offset_helper"
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/header_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/valute_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        tools:text="Dollar of US" />

    <TextView
        android:id="@+id/header_item_rate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/valute_rate"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        tools:text="65.05" />

    <TextView
        android:id="@+id/header_item_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/valute_code"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp"
        tools:text="USD" />

</LinearLayout>